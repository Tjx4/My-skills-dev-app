<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="loginViewModel"
        type="co.za.dvt.myskilldevapp.features.login.LoginViewModel"/>
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".features.login.LoginActivity"
            android:animateLayoutChanges="true">

        <TextView
                style="@style/MediumLightTextView"
                android:id="@+id/txtTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large__margin"
                android:layout_marginBottom="@dimen/large__margin"
                tools:text="Please enter your details to signIn"
                android:text="@{loginViewModel.currentUserMessage}"
                app:layout_constraintLeft_toLeftOf="@+id/btnSignIn"
                app:layout_constraintRight_toRightOf="@+id/btnSignIn"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/txtUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#fff"
                android:padding="@dimen/small_padding"
                android:hint="Enter username"
                android:text="@={loginViewModel.username}"
                app:layout_constraintLeft_toLeftOf="@+id/btnSignIn"
                app:layout_constraintRight_toRightOf="@+id/btnSignIn"
                android:layout_marginTop="@dimen/medium__margin"
                app:layout_constraintTop_toBottomOf="@+id/txtTest"/>

        <EditText
                android:id="@+id/txtPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:background="#fff"
                android:padding="@dimen/small_padding"
                android:hint="Enter password"
                android:text="@={loginViewModel.password}"
                android:layout_marginTop="@dimen/medium__margin"
                app:layout_constraintLeft_toLeftOf="@+id/btnSignIn"
                app:layout_constraintRight_toRightOf="@+id/btnSignIn"
                app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <Button
                android:id="@+id/btnSignIn"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:onClick="onTestButtonClicked"
                android:text="Sign in"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/large__margin"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    style="@style/MediumLightTextView"
                    android:id="@+id/txtForgotYourUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Forgot your Username/Password?"
                    android:text="@string/forgot_password_text"
                    app:layout_constraintLeft_toLeftOf="@+id/btnSignIn"
                    app:layout_constraintRight_toRightOf="@+id/btnSignIn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/MediumLightTextView"
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/signup_text"
                    android:text="@string/signup_text"
                    app:layout_constraintLeft_toLeftOf="@+id/btnSignIn"
                    app:layout_constraintRight_toRightOf="@+id/btnSignIn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight="1"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>