<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".features.dashboard.fragments.CarPricesFragment">

    <RelativeLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
                android:id="@+id/tvHeading"
                style="@style/MediumPlusTextView"
                tools:text="Please select a price"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Please select a price"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstAsignees"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tvHeading"/>

        <Button
                android:id="@+id/btnCreateTask"
                style="@style/MySkillsButton"
                android:layout_below="@+id/lstAsignees"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Button" />

    </RelativeLayout>

</FrameLayout>
