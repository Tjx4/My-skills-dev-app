<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".features.registration.fragments.RegistrationStep1Fragment"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:background="@color/darkBackground"
            android:animateLayoutChanges="true">

        <TextView
                android:id="@+id/txtTest"
                style="@style/largeBlueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:gravity="top"
                android:textColor="#fff"
                android:height="200dp"
                android:background="@color/redText"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/txtTest2"
                style="@style/largeBlueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:gravity="top"
                android:textColor="#fff"
                android:height="200dp"
                android:background="@color/blueText"
                app:layout_constraintTop_toBottomOf="@+id/txtTest" />

        <TextView
                style="@style/largeBlueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:gravity="top"
                android:textColor="#fff"
                android:height="600dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/txtTest2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
