<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dashboardViewModel"
            type="co.za.dvt.myskilldevapp.features.dashboard.DashboardViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.dashboard.DashboardActivity"
        android:background="@color/lightBackground">

        <Button
                style="@style/DashButtons"
                android:id="@+id/btnViewCharacters"
                android:text="View characters"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:onClick="onViewCharactersButtonClicked"/>

        <Button
                style="@style/DashButtons"
                android:text="View houses"
                app:layout_constraintTop_toBottomOf="@+id/btnViewCharacters"
                app:layout_constraintLeft_toLeftOf="parent"
                android:onClick="onViewHousesButtonClicked"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>