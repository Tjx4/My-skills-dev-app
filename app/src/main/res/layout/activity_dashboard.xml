<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="dashboardViewModel"
                type="co.za.dvt.myskilldevapp.features.dashboard.DashboardViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/medium_padding"
            tools:context=".features.dashboard.DashboardActivity">

        <TextView
                android:id="@+id/tvLuckyNumberMessage"
                style="@style/MediumTextView"
                tools:text="This is your lucky number"
                android:text="This is your lucky number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.052"
                app:layout_constraintHorizontal_bias="0.4"/>

        <TextView
                android:id="@+id/tvLuckyNumber"
                style="@style/xlargeTextView"
                tools:text="0"
                android:text="@{@string/numeric_formater(dashboardViewModel.currentLuckyNumber)}"
                android:textColor="#0088cc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLuckyNumberMessage"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.4"/>

        <TextView
                android:id="@+id/tvMessage"
                style="@style/MediumTextView"
                tools:text="Try your luck... roll the dice and you might win"
                android:gravity="start"
                android:text="@{dashboardViewModel.message}"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLuckyNumber"
                app:layout_constraintVertical_bias="0.146"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

        <ImageView
                android:id="@+id/imgDice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:srcCompat="@drawable/ic_di_1"
                android:src="@drawable/ic_di_1"
                android:layout_marginTop="28dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@+id/tvMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.5"/>

        <Button
                style="@style/MySkillsButton"
                android:id="@+id/btnDice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll"
                android:onClick="onRollButtonClicked"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imgDice"
                app:layout_constraintVertical_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>