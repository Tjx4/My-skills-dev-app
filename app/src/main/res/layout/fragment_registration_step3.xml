<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".features.registration.fragments.RegistrationStep3Fragment"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large__margin">

        <TextView
                style="@style/MediumLightTextView"
                android:id="@+id/txtRegisterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Name: Tshepo Baloyi"
                android:text="Name: Tshepo Baloyi"
                app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                app:layout_constraintRight_toRightOf="@+id/btnRegister"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                style="@style/MediumLightTextView"
                android:id="@+id/txtRegisterGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium__margin"
                tools:text="Gender: female"
                android:text="Gender: female"
                app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                app:layout_constraintRight_toRightOf="@+id/btnRegister"
                app:layout_constraintTop_toBottomOf="@+id/txtRegisterName" />

        <TextView
                style="@style/MediumLightTextView"
                android:id="@+id/txtRegisterEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium__margin"
                tools:text="Email: rr@gg.com"
                android:text="Email: rr@gg.com"
                app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                app:layout_constraintRight_toRightOf="@+id/btnRegister"
                app:layout_constraintTop_toBottomOf="@+id/txtRegisterGender" />

        <TextView
                style="@style/MediumLightTextView"
                android:id="@+id/txtRegisterMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium__margin"
                tools:text="Mobile: 082 9999 999"
                android:text="Mobile: 082 9999 999"
                app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                app:layout_constraintRight_toRightOf="@+id/btnRegister"
                app:layout_constraintTop_toBottomOf="@+id/txtRegisterEmail" />

        <Button
            android:id="@+id/btnRegister"
            android:background="@drawable/pa_button_background"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/large__margin"
            app:layout_constraintTop_toBottomOf="@+id/txtRegisterMobileNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>