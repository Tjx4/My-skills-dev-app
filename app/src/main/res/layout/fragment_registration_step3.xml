<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="registrationViewModel"
                type="co.za.dvt.myskilldevapp.features.registration.RegistrationViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.registration.fragments.RegistrationStep3Fragment"
        android:animateLayoutChanges="true">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/large__margin">

                <TextView
                        style="@style/MediumLightTextView"
                        android:id="@+id/txtRegisterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Name: Tshepo Baloyi"
                        android:text="@{registrationViewModel.fullNames}"
                        app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                        app:layout_constraintRight_toRightOf="@+id/btnRegister"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        style="@style/MediumLightTextView"
                        android:id="@+id/txtRegisterGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium__margin"
                        tools:text="Gender: female"
                        android:text="@={registrationViewModel.gender.sex}"
                        app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                        app:layout_constraintRight_toRightOf="@+id/btnRegister"
                        app:layout_constraintTop_toBottomOf="@+id/txtRegisterName" />

                <TextView
                        style="@style/MediumLightTextView"
                        android:id="@+id/txtRegisterEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium__margin"
                        tools:text="Email: rr@gg.com"
                        android:text="@={registrationViewModel.email}"
                        app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                        app:layout_constraintRight_toRightOf="@+id/btnRegister"
                        app:layout_constraintTop_toBottomOf="@+id/txtRegisterGender" />

                <TextView
                        style="@style/MediumLightTextView"
                        android:id="@+id/txtRegisterMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium__margin"
                        tools:text="Mobile: 082 9999 999"
                        android:text="@={registrationViewModel.mobileNumber}"
                        app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
                        app:layout_constraintRight_toRightOf="@+id/btnRegister"
                        app:layout_constraintTop_toBottomOf="@+id/txtRegisterEmail" />

                <Button
                        style="@style/MyPAButton"
                        android:id="@+id/btnRegister"
                        android:text="Register"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/large__margin"
                        app:layout_constraintTop_toBottomOf="@+id/txtRegisterMobileNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>
