<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/imgUserType"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/round_outline_light"
            android:src="@drawable/ic_host_light"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/medium_padding"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            style="@style/MediumLightTextView"
            android:id="@+id/tvUserType"
            android:layout_width="90dp"
            android:gravity="center"
            android:text="UserType"
            android:layout_marginTop="@dimen/xsmall_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUserType"/>

</androidx.constraintlayout.widget.ConstraintLayout>