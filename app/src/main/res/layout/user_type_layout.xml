<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
            android:id="@+id/imgbUserType"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/round_outline_light"
            android:src="@drawable/ic_host_light"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            style="@style/MediumLightTextView"
            android:id="@+id/tvUserType"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="UserType"
            android:layout_marginTop="@dimen/xsmall_margin"
            app:layout_constraintTop_toBottomOf="@+id/imgbUserType"/>

</androidx.constraintlayout.widget.ConstraintLayout>