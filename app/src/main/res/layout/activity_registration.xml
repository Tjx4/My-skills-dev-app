<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.Html"/>
        <variable
            name="registrationViewModel"
            type="co.za.dvt.myskilldevapp.features.registration.RegistrationViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="features.registration.RegistrationActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/pagerToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/slide_toolbar_height"
                    app:title="Title 2"
                    android:background="@color/colorPrimary"
                    app:titleTextColor="@color/lightText"
                    app:layout_scrollFlags="scroll|enterAlways"/>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tbStages"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    app:tabTextColor="@color/lighterBackground"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:tabIndicatorColor="@color/blueText"
                    app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/detailsBar"
                    android:layout_margin="0dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txtStageDescription"
                        style="@style/MediumLightTextView"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/txtStageDescription2"
                        android:text="Description"/>

                <TextView
                        android:id="@+id/txtStageDescription2"
                        style="@style/MediumLightTextView"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:text=""/>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpRegistrationSteps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/darkBackground"
                android:padding="0dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <LinearLayout
                android:visibility="gone"
                android:id="@+id/trackBar"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">

            <Button
                    android:id="@+id/btnRegPrev"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:textColor="@color/lightText"
                    android:text="Back"
                    android:onClick="onPrevButtonClicked"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/btnRegNext"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333"
                    android:textColor="@color/lightText"
                    android:text="Next"
                    android:onClick="onNextButtonClicked"
                    android:layout_weight="1"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clErrorContainer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusableInTouchMode="true"
            android:paddingHorizontal="@dimen/small_padding"
            android:background="@color/errorBackground"
            android:layout_gravity="bottom">

            <ImageView
                    style="@style/MediumRedTextView"
                    android:id="@+id/imgErroIcon"
                    android:layout_width="55dp"
                    tools:text="Error message"
                    android:src="@drawable/ic_error_light"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    style="@style/MediumLightTextView"
                    android:id="@+id/txtErrorMessage"
                    android:layout_width="0dp"
                    tools:text="Error message"
                    android:text="@{registrationViewModel.errorMessage}"
                    android:gravity="left"
                    app:layout_constraintLeft_toRightOf="@+id/imgErroIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>